[Unit]
Description=Key Listener for Voice
After=graphical-session.target sound.target

[Service]
ExecStartPre=/bin/sh -c 'for i in $(seq 1 30); do [ -e /dev/input/voice-kbd ] && exit 0; sleep 1; done; echo "voice-kbd not found"; exit 1'
ExecStart=%h/venvs/ai/bin/python %h/app/key_listener.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
